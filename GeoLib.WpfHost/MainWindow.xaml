<Window x:Class="GeoLib.WpfHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeoLib.WpfHost"
        mc:Ignorable="d"
        Title="MainWindow" Height="230" Width="400">
    <StackPanel Orientation="Vertical">
        <Button x:Name="StartButton" Content="Start WCF Services" Margin="50,20,50,0" FontSize="18" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop WCF Services" Margin="50,20,50,0" FontSize="18" Click="StopButton_Click"/>
        <Label x:Name="MessageLabel" Content="" Margin="50,20,49.6,0" HorizontalAlignment="Center" Width="294"/>
    </StackPanel>
</Window>
